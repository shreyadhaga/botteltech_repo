{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],  // ✅ valid only
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["jest","node", "@testing-library/jest-dom"]  // ✅ handles Node globals like `global`
  },
  "include": ["src", "jest.setup.ts"],
  "exclude": ["node_modules"]
}
